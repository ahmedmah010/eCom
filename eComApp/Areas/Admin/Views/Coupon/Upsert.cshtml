@using eCom.Utilities
@model CouponVM

@{
    List<SelectListItem> DiscType = new List<SelectListItem>
    {
        new SelectListItem("Percentage",DiscountType.Percentage),    
        new SelectListItem("Fixed Amount",DiscountType.FixedAmount),    
    };
    MultiSelectList SelectedCategories = new MultiSelectList(Model.Categories, "Id", "Name");
}

<form asp-controller="Coupon" asp-action="Upsert" method="post">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label>Code</label>
        <input  class="form-control" asp-for="Code">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="form-group">
        <label asp-for="DiscountType"></label>
        <select class="form-control" asp-for="DiscountType" asp-items="DiscType">
            <option selected disabled>--Choose Type--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DiscountValue"></label>
        <input class="form-control" asp-for="DiscountValue">
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input class="form-control" asp-for="ExpirationDate">
    </div>
    <div class="form-group">
        <label asp-for="UsageLimit"></label>
        <input class="form-control" asp-for="UsageLimit">
    </div>
    <div class="form-group">
        <label asp-for="MinPurchaseAmount"></label>
        <input class="form-control" asp-for="MinPurchaseAmount">
    </div>
    <div class="form-group">
        <label asp-for="MaxDiscountAmount"></label>
        <input class="form-control" asp-for="MaxDiscountAmount">
    </div>

    <div class="form-group">
        <label asp-for="Categories"></label>
        <select class="form-control" asp-items="SelectedCategories" asp-for="SelectedCatIds" multiple>
        </select>
    </div>


    <div class="form-check">
        <input asp-for="IsSingleUse" class="form-check-input">
        <label class="form-check-label" asp-for="IsSingleUse">Single Use</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>


</form>